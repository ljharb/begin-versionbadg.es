{
  "name": "versionbadg.es",
  "version": "1.0.1",
  "private": true,
  "architect": {
    "aws": {
      "region": "us-east-1",
      "profile": "ljharb",
      "runtime": "nodejs20.x"
    },
    "plugins": [
      "arc-plugin-custom-domain"
    ],
    "cdn": [
      [
        "staging",
        "stage.versionbadg.es"
      ],
      [
        "production",
        "versionbadg.es"
      ],
      [
        "cert",
        "arn:aws:acm:us-east-1:590183939507:certificate/bb3719c9-932f-4459-81c5-c03302925e64"
      ]
    ],
    "app": "version-badges",
    "http": {
      "/": {
        "method": "get",
        "src": "./root"
      },
      "/:user/:repo": {
        "method": "get",
        "src": "./handler"
      }
    }
  },
  "scripts": {
    "lint": "eslint --ext=js,mjs .",
    "start": "sandbox",
    "pretest": "npm run lint",
    "tests-only": "echo 'good first issue'",
    "test": "npm run tests-only",
    "posttest": "aud --production",
    "deploy:staging": "arc-deploy",
    "deploy:production": "arc-deploy --production"
  },
  "devDependencies": {
    "@architect/sandbox": "^6.0.5",
    "@ljharb/eslint-config": "^21.1.1",
    "aud": "^2.0.4",
    "eslint": "=8.8.0"
  },
  "dependencies": {
    "arc-plugin-custom-domain": "^0.0.1"
  },
  "engines": {
    "node": "^20"
  }
}
